<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fundo Vermelho -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF5252"/> <!-- Vermelho vibrante -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- Borda branca fina -->
        </shape>
    </item>

    <!-- Padrão geométrico simples simulado (círculo central) -->
    <item android:top="10dp" android:bottom="10dp" android:left="10dp" android:right="10dp">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#FFFFFF"/>
            <solid android:color="#FF5252"/> <!-- Fundo transparente/vermelho -->
        </shape>
    </item>

    <!-- Cruz central simulada -->
    <item android:top="20dp" android:bottom="20dp" android:left="40dp" android:right="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
    <item android:top="40dp" android:bottom="40dp" android:left="20dp" android:right="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

    <!-- Retomando a cor vermelha no centro da cruz para criar padrão vazado -->
    <item android:top="25dp" android:bottom="25dp" android:left="45dp" android:right="45dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF5252"/>
        </shape>
    </item>
     <item android:top="45dp" android:bottom="45dp" android:left="25dp" android:right="25dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF5252"/>
        </shape>
    </item>

</layer-list>